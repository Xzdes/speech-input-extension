{
  "manifest_version": 3,
  "name": "Голосовой Ввод Pro",
  "version": "1.0",
  "description": "Автоматически вводит текст с микрофона в активное поле ввода.",
  "permissions": [
    "storage",     
    "activeTab"   
  ],
  "host_permissions": [ 
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle" 
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-off-16.png",
      "32": "icons/icon-off-32.png",
      "48": "icons/icon-off-48.png",
      "128": "icons/icon-off-128.png"
    },
    "default_title": "Голосовой Ввод (Выключено)"
  },
  "icons": {
    "16": "icons/icon-off-16.png",
    "32": "icons/icon-off-32.png",
    "48": "icons/icon-off-48.png",
    "128": "icons/icon-off-128.png"
  }
}